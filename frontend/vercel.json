{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "rewrites": [
      {
        "source": "/api/v1/(.*)",
        "destination": "https://videoflix-backend.vercel.app/api/v1/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ],
    "env": {
      "VITE_API_BASE_URL": "https://videoflix-backend.vercel.app/api/v1"
    }
  }