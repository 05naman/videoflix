{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "https://videoflix-tawny.vercel.app/api/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ],
    "env": {
      "VITE_API_BASE_URL": "https://videoflix-tawny.vercel.app/api/v1"
    }
  }