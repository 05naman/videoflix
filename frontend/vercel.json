{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "https://videoflix-backend.onrender.com"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ],
    "env": {
      "VITE_API_BASE_URL": "https://videoflix-backend.onrender.com"
    }
  }